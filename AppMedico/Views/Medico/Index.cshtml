@model IEnumerable<AppMedico.Models.Medicos>

@{
    ViewBag.Title = "Index";
}



<div class="panel-heading">
    <h1> Relação dos Médicos Registrados</h1>
</div>
<div class="panel-body">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>CRM</th>
                <th>Nome</th>
                <th>Especialidade</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var Medico in Model)
            {
                <tr>
                    <td>@Medico.IDMedico</td>
                    <td>@Medico.CRM</td>
                    <td>@Medico.Nome</td>
                    <td>@Medico.Especialidades.Nome</td>
                    <td>
                    @Html.ActionLink("Editar", "Editar", new { id = Medico.IDMedico }, new { @class = "btn btn-primary btn-sm" }) 
                    @Html.ActionLink("Visualizar","Visualizar", new { id = Medico.IDMedico }, new { @class = "btn btn-primary btn-sm" }) 
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <div class="panel-footer panel-info">
        @Html.ActionLink("Registrar um novo Médico", "Adiciona", null, new { @class = "btn btn-success" })
        @Html.ActionLink("Voltar ", "Index", "Home", null, new { @class = "btn btn-warning" })
    </div>

    @section styles{
        <link href="@Url.Content("~/content/DataTables/css/dataTables.bootstrap.css")" rel="stylesheet" />
    }

    @section ScriptPage {
        <script type="text/javascript" src="~/Scripts/jquery-3.2.1.js"></script>
        <script src="@Url.Content("~/scripts/DataTables/jquery.dataTables.js")"></script>
        <script src="@Url.Content("~/scripts/DataTables/dataTables.bootstrap.js")"></script>


        <script type="text/javascript">
            $(document).ready(function () {
                $('.table').dataTable({
                    "language": {
                        "url": "https://cdn.datatables.net/plug-ins/1.10.12/i18n/Portuguese-Brasil.json"
                    }
                   
                });
                "order"[[1, "asc"]]
            });
        </script>

    }


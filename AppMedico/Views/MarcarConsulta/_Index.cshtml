@model IEnumerable<AppMedico.Models.MarcarConsulta>


<div class="panel-body" id="indexExcluir">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome Paciente</th>
                <th>Nome Médico</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var consulta in Model)
            {
                <tr>
                    <td id="consulta@(consulta.Paciente.Nome)">@consulta.Paciente.Nome</td>
                    <td id="medico@(consulta.Medicos.Nome)">@consulta.Medicos.Nome</td>
                    <td id="data@(consulta.Data)">@consulta.Data.ToString("dd MMM yyyy")</td>
                    <td>
                         @using (Ajax.BeginForm("Index", "MarcarConsulta", new AjaxOptions { HttpMethod = "Get", InsertionMode = InsertionMode.Replace, UpdateTargetId = "indexExcluir" }))
                        {@Html.ActionLink("Excluir", "Excluir", new { id = consulta.IDConsulta })}
                        @Html.ActionLink("Editar", "Editar", new { id = consulta.IDConsulta }, new { @class = "btn btn-primary btn-xs" })
                        @Html.ActionLink("Visualizar", "Visualizar", new { id = consulta.IDConsulta }, new { @class = "btn btn-primary btn-xs" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
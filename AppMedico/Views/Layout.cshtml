<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Posto Medico - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/Visualizacao.css")" rel="stylesheet" />
    <style>
        body {
            padding-top: 60px;
        }
    </style>
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Posto de Saúde </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li id="menu" class="active">
                        @Html.ActionLink("Home", "Index", "Home")
                    </li>
                    <li id="menu">
                        @Html.ActionLink("Médico", "Index", "Medico")
                    </li>
                    @if (Session["Logado"]!=null)
                    {
                        <li id="menu" style="display:none">
                            @Html.ActionLink("Pacientes", "Index", "Paciente")
                        </li>
                        <li id="menu"style="display:none">
                            @Html.ActionLink("Consultas", "Index", "MarcarConsulta")
                        </li>
                    }
                    else
                    {
                        <li id="menu">
                            @Html.ActionLink("Pacientes", "Index", "Paciente")
                        </li>
                        <li id="menu">
                            @Html.ActionLink("Consultas", "Index", "MarcarConsulta")
                        </li>

                    }

                    @if (Session["MedicoLogado"] == null)
                    {
                        <li id="menu" style="display:none">
                            @Html.ActionLink("Prontuário", "Index", "Prontuario")
                        </li>
                    }
                    else
                    {
                        <li id="menu">
                            @Html.ActionLink("Prontuário", "Index", "Prontuario")
                        </li>
                    }
                    <li id="menu">
                        @Html.ActionLink("Sair", "Index", "Usuario")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    <script src="@Url.Content("~/Scripts/jquery-3.2.1.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")"></script>
    @RenderSection("ScriptPage", false);
    @*@RenderSection("script", required: false);*@
</body>
</html>